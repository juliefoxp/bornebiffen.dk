---
const { htmltag = "p", teksttype = "brødtekst", font = "body", stylingclasses = "" } = Astro.props;
const Htmltag = htmltag;

// Tailwind classes for tekststørrelser med responsivitet
const sizeClasses = {
  "konsultativ": "text-sm sm:text-base md:text-lg italic",
  "brødtekst": "text-base sm:text-lg md:text-xl lg:text-2xl my-4",
};

// Tailwind classes for skrifttyper
const fontClasses = {
  "body": "font-body", // News Cycle
};
---
<Htmltag class:list={[sizeClasses[teksttype], fontClasses[font], stylingclasses]}>
  <slot />
</Htmltag>
